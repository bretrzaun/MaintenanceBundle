{
    "name": "bretrzaun/maintenance-bundle",
    "description": "Bundle for maintenance switch in Symfony4 applications",
    "type": "bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Bret R. Zaun",
            "email": "bretrzaun@hotmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "BretRZaun\\MaintenanceBundle\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BretRZaun\\MaintenanceBundle\\Tests\\" : "tests/"
        }
    },

    "require": {
        "php": ">=7.1.3",
        "symfony/yaml": "^4.0",
        "twig/twig": "^2.5"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/asset": "^4.0",
        "symfony/browser-kit": "^4.0",
        "symfony/translation": "^4.0",
        "symfony/var-dumper": "^4.1"
    },
    "config": {
        "secure-http": false
    },
    "scripts" : {
        "test" : "simple-phpunit"
    }
}
